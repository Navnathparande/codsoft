                                     #CSS#

/* Styles for the portfolio */

/* General styles */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

/* Header styles */
header {
  text-align: center;
  background-color: #f0f0f0;
  padding: 20px;
}

/* About Section styles */
.about {
  text-align: center;
  padding: 50px 20px;
}

.about img {
  width: 200px;
  border-radius: 50%;
}

/* Skills Section styles */
.skills {
  text-align: center;
  padding: 50px 20px;
}

.skills ul {
  list-style: none;
  padding: 0;
}

.skills li {
  display: inline-block;
  margin: 5px;
  padding: 8px 16px;
  border: 1px solid #ccc;
  border-radius: 20px;
}

/* Projects Section styles */
.projects {
  padding: 50px 20px;
}

.project {
  margin-bottom: 30px;
}

.project img {
  width: 100%;
  max-width: 400px;
  height: auto;
}

/* Resume Section styles */
.resume {
  text-align: center;
  padding: 50px 20px;
}

.resume a {
  display: inline-block;
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
}

.resume a:hover {
  background-color: #0056b3;
}

/* Contact Section styles */
.contact {
  text-align: center;
  padding: 50px 20px;
}

/* Footer styles */
footer {
  text-align: center;
  background-color: #333;
  color: #fff;
  padding: 20px;
}

